# terminal emulator
alt + Return
	alacritty

# program launcher
alt + x
	rofi -show drun -theme Monokai

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd

# close and kill
alt + q
	bspc node -c

# alternate between the tiled and monocle layout
alt + m
	bspc desktop -l next

# focus the node in the given direction
alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous window in the current desktop
alt + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# expand a window by moving one of its side outward
ctrl + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
ctrl + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Volume Control
alt + z
    bluetoothctl power on && bluetoothctl trust F8:AB:E5:17:F0:7C && bluetoothctl connect F8:AB:E5:17:F0:7C && pacmd set-default-sink bluez_sink.F8_AB_E5_17_F0_7C.a2dp_sink

alt + shift + z
    bluetoothctl disconnect F8:AB:E5:17:F0:7C

alt + {_, shift} + s
    pacmd set-default-sink alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__hw_sofhdadsp__sink

alt + shift +
{XF86AudioLowerVolume, XF86AudioRaiseVolume}
    pactl -- set-sink-volume $(pactl get-default-sink) {-,+}10%

# Screenshot
Print 
    flameshot gui

# Brightness
alt + b : {x, 1, 2, 3}
    redshift {-x, -P -O 1500 -b 0.7, -P -O 2000 -b 0.8, -P -O 3000 -b 0.9}

# Restart environment
alt + g
    ~/.config/bspwm/start.sh
