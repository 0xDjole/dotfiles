[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053

alert = #bd2c40
warning = #ffae00
ok = #fbff00
healthy = #c1ffa6

[bar/mybar]
width = 100%
height = 27

wm-restack = bspwm 

radius = 0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = Hack Nerd Font:size=11;2

modules-left = bspwm
modules-right = date pulseaudio wlan battery

tray-position = right
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

separator = |

[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-underline = ${colors.primary}
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1

[module/wlan]
type = internal/network
interface = wlp0s20f3
interval = 3.0

format-connected = ï‡«  <label-connected>
label-connected = %essid%

format-disconnected =

[module/date]
type = internal/date
interval = 5

date =

time = %H:%M

format-prefix = ï€—

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume = ï€¨ %percentage%%
label-volume-foreground = ${colors.foreground}

label-muted = ğŸ”‡ muted
